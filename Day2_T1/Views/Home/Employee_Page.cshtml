@using Day1_T1.Models
@model List<Employee>
<html>
    <style>
        table
        {
            font-family:'Times New Roman', Times, serif;
            border-collapse:collapse;
            width:100%;
        }
        td,th
        {
            border : 1px solid #dddddd;
            text-align : center;
            padding : 10px;
        }
    </style>
<body>
<a href = "Employee/Create">Create New Employee</a>
<h3>Employee Details</h3>
<table style="width:100%">
    <tr>
        <th>E_Id</th>
        <th>E_Name</th>
        <th>Job</th>
        <th>Salary</th>
        <th>Dept_No</th>
    </tr>
    @foreach(Employee item in Model)
        {
            <tr>
                <td>@item.E_Id</td>
                <td>@item.E_Name</td>
                <td>@item.Job</td>
                <td>@item.Salary</td>
                <td>@item.Dept_No</td>
                <td>
                    <a href = "/Employee/Detail/@item.E_Id">Details</a>
                    <a href = "/Employee/Edit/@item.E_Id">Edit</a>
                    <a href = "/Employee/Delete/@item.E_Id">Delete</a>

                </td>

            </tr>
        }
